@{
    ViewData["Title"] = "LogIn or Register";
}
 <link type="text/css" rel="stylesheet" href="~/css/site.css" asp-append-version="true" >
<div id="autho-section">
    <form action=""  class="form-signin">
        <div class="form-group">
            <label for="login">Username:</label>
            <input class="form-control" type="text" name="login" id="username">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control" type="password" name="password" id="password">
        </div>
        <button id="btn-login" type="submit" class="btn btn-primary">Register</button>
        
    </form>
</div>

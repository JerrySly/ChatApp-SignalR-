@{
    ViewData["Title"] = "Chat";
}
<link rel="stylesheet" href="~/css/chat.css">
<div id="page">
    <div id="room-section">
        <div class="header"><h2>List of rooms:</h2></div>
        <div class="room">Room1
            <hr>
        </div>
    </div>

    <div id="text-section">
        <div id="messages-from-other">
        </div>
        <form action="post">
            <textarea name="message" class="message-block"></textarea>
            <button type="submit" class="btn btn-primary">Send</button>
            <button type="clear" class="btn btn-primary">Clear</button>
        </form>
    </div>

    <div id="user-section">
        <div class="header"><h2>List of users:</h2></div>
        <div class="user">You
            <hr>
        </div>
    </div>
</div>


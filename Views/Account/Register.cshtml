@model ChatApp_SignalR_.Models.RegisterModel
<link type="text/css" rel="stylesheet" href="~/css/site.css" asp-append-version="true">

<div id="autho-section">
 
<form class="form-signin" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <h2>Регистрация</h2>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label><br />
            <input class="form-control type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input class="form-control asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input class="form-control asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <button id="btn-login" class="btn btn-primary" type="submit"  >Регистрация</button>>
        </div>
    </div>
</form>
</div>